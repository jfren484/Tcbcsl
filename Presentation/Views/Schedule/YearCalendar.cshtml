@model YearCalendarModel
<div class="panel panel-primary">
    <div class="panel-heading calendar-year-nav">
        <a href="#" class="@(Model.Year > Consts.FirstYear ? "" : "disabled")" data-year="@(Model.Year - 1)" role="button"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <span>@Model.Year</span>
        <a href="#" class="@(Model.Year < Consts.CurrentYear ? "" : "disabled")" data-year="@(Model.Year + 1)" role="button"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
    <div class="panel-body container">
        <div class="row">
            @foreach (var monthModel in Model.Months)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 grid4321">
                    <div class="panel panel-primary">
                        <div class="panel-heading">@monthModel.MonthName</div>
                        <table class="table table-month">
                            <thead>
                                <tr>
                                    <th>Su</th>
                                    <th>Mo</th>
                                    <th>Tu</th>
                                    <th>We</th>
                                    <th>Th</th>
                                    <th>Fr</th>
                                    <th>Sa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var week in monthModel.Weeks)
                                {
                                    <tr>
                                        @foreach (var dayModel in week)
                                        {
                                            if (dayModel.HasGames)
                                            {
                                                <td>
                                                    @Html.RouteLink(dayModel.Day.ToString(),
                                                                new
                                                                {
                                                                    controller = "Schedule",
                                                                    action = "Schedule",
                                                                    date = new DateTime(Model.Year, monthModel.Month, dayModel.Day).ToString("yyyy-MM-dd")
                                                                },
                                                                null)
                                                </td>
                                            }
                                            else
                                            {
                                                <td>@dayModel.Day.ToString("#;;''")</td>
                                            }
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>