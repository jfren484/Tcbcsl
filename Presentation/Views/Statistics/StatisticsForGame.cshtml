@model StatisticsFilterModel
@{
    const string title = "Statistics - ";
    ViewBag.Title = title;
}
<h2>@title</h2>
<table id="statsTable" class="table table-bordered table-condensed table-striped stats-table">
    <thead>
        <tr class="info">
            <th>Name</th>
            @Html.Partial("_CommonColumns")
        </tr>
    </thead>
</table>
@section scripts
{
    <script>
        $(function() {
            $('#statsTable').dataTable({
                'ajax': {
                    'url': '/Statistics/GameData/@Model.GameId',
                    'type': 'POST',
                    'dataSrc': ''
                }
            });
        });
    </script>
}