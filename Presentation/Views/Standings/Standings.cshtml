@model StandingsModel
@{
    ViewBag.Title = Model.Type + " Standings";

    var outcomeStrings = new[] { "Lost", "Tied", "Won" };
}
<h2>@Model.Type Standings</h2>
<div class="row">
    @foreach (var groupModel in Model.Groups)
    {
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    @groupModel.Name Division
                </div>
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>Team</th>
                            <th>W</th>
                            <th>L</th>
                            <th>T</th>
                            <th>Pct</th>
                            <th>GB</th>
                            <th>Div</th>
                            <th>RS</th>
                            <th>RA</th>
                            <th>Streak</th>
                            <th>Last 5</th>
                        </tr>
                    </thead>
                    @foreach (var teamModel in groupModel.Teams)
                    {
                        <tr>
                            <td>@teamModel.TeamName</td>
                            <td>@teamModel.Wins</td>
                            <td>@teamModel.Losses</td>
                            <td>@teamModel.Ties</td>
                            <td>@teamModel.WinningPercentage.ToString("0.000")</td>
                            <td>@teamModel.GamesBack</td>
                            <td>@teamModel.DivisionWins -
                                @teamModel.DivisionLosses
                                @teamModel.DivisionTies.ToString("'- '#;;''")</td>
                            <td>@teamModel.RunsScored</td>
                            <td>@teamModel.RunsAllowed</td>
                            <td>@outcomeStrings[teamModel.StreakOutcome + 1] @teamModel.StreakCount</td>
                            <td>@teamModel.Last5Wins -
                                @teamModel.Last5Losses
                                @teamModel.Last5Ties.ToString("'- '#;;''")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    }
</div>