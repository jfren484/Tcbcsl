<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("TCBCSL", "Index", "Home", null, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    @Html.RouteLink("Schedule", new
                                                {
                                                    controller = "Schedule",
                                                    action = "Schedule",
                                                    date = (DateTime?)null
                                                }, null)
                </li>
                <li class="dropdown">
                    @Html.Partial("_NavDropdownToggle", "Standings")
                    @{ var dict = new RouteValueDictionary(new {controller = "Standings", action = "Standings", year = (int?)null}); }
                    <ul class="dropdown-menu">
                        <li>
                            @{ dict["type"] = StandingsType.Division; }
                            @Html.RouteLink("Division", dict)
                        </li>
                        <li>
                            @{ dict["type"] = StandingsType.League; }
                            @Html.RouteLink("League", dict)
                        </li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Statistics", "League", "Statistics")</li>
                <li class="dropdown">
                    @Html.Partial("_NavDropdownToggle", "Members")
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Churches", "Index", "Churches")</li>
                        <li>@Html.ActionLink("Coaches", "Index", "Coaches")</li>
                        <li>@Html.RouteLink("Teams", new
                                                     {
                                                         controller = "Team",
                                                         action = "Teams",
                                                         year = (int?)null
                                                     }, null)</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Rules", "LeagueRules", "Content")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
