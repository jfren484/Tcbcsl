@using Tcbcsl.Data
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Twin Cities Baptist Church Softball League" />
        <title>@ViewBag.Title - TCBCSL</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("head", required: false)
    </head>
    <body>
        @Html.Partial("_MainNavigation")
        <div class="container body-content">
            @RenderBody()
            <footer>
                <hr />
                <p>&copy; @CentralTimeZone.Now.Year - Twin Cities Baptist Church Softball League</p>
            </footer>
        </div>
        @Scripts.Render("~/bundles/script-base")
        <script>
            // Set values for "constants" declared in site.js (so we can get values from C# classes)
            consts.firstYear = @Consts.FirstYear + 0;
            consts.currentYear = @Consts.CurrentYear +0;
            consts.playerPoolTeamId = @Consts.PlayerPoolTeamId +0;
            consts.playerPoolTeamName = '@Consts.PlayerPoolTeamName';
            consts.gameStatus.scheduled = @Tcbcsl.Data.Entities.GameStatus.Scheduled +0;
            consts.gameStatus.postponed = @Tcbcsl.Data.Entities.GameStatus.Postponed +0;
            consts.gameStatus.rainedOut = @Tcbcsl.Data.Entities.GameStatus.RainedOut +0;
            consts.gameStatus.forfeited = @Tcbcsl.Data.Entities.GameStatus.Forfeited +0;
            consts.gameStatus.final = @Tcbcsl.Data.Entities.GameStatus.Final +0;
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
