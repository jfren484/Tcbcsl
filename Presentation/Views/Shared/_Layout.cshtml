<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - TCBCSL</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        @Html.Partial("_MainNavigation")
        <div class="container body-content">
            @RenderBody()
            <hr/>
            <footer>
                <p>&copy; @DateTime.Now.Year - Twin Cities Baptist Church Softball League</p>
            </footer>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            // Set values for "constants" declared in site.js (so we can get values from C# classes)
            consts.firstYear = @Consts.FirstYear + 0;
            consts.currentYear = @Consts.CurrentYear + 0;
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
