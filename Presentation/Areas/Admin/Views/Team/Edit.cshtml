@model TeamEditModel
@{
    var title = (Model.TeamId == 0 ? "Create" : "Edit") + " Team";
    ViewBag.Title = title;
}
<div class="well">
    @using (Html.BeginForm("Edit", "Team", FormMethod.Post, new { @class = "form-horizontal form-with-validation" }))
    {
        @Html.HiddenFor(m => m.TeamId)

        <fieldset>
            <legend>@title</legend>
            @Html.EditorFor(m => m.FirstName)
            @Html.EditorFor(m => m.LastName)
            @Html.EditorFor(m => m.EmailAddress)
            @Html.EditorFor(m => m.PhoneNumbers)
            @Html.EditorFor(m => m.Address)
            @Html.EditorFor(m => m.Comments)
            @Html.Partial("_FormCancelSubmit", Url.Action("List"))
        </fieldset>
    }
</div>
