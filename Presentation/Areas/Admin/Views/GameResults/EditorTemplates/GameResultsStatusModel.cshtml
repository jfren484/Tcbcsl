@model GameResultsStatusModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_FormFieldLayout.cshtml";
}
@section Editable
{
    @Html.DropDownListFor(m => m.GameStatusId, Model.ItemSelectList, new
                                                                     {
                                                                         @class = "form-control",
                                                                         data_rule_result_scheduled_with_score = true,
                                                                         data_rule_result_missed_with_score = true
                                                                     })
    @Html.ValidationMessageFor(m => m.GameStatusId)
}
@section Readonly
{
    @Html.HiddenFor(m => m.GameStatusId)
    <p class="form-control-static">@Model.Description</p>
}
