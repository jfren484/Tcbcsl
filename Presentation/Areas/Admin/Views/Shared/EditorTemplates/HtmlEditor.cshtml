@model string
<div class="form-group">
    @Html.LabelForModel(new {@class = "control-label col-sm-2"})
    <div class="col-sm-10">
        @if (ViewBag.IsReadonly ?? false)
        {
            @Html.HiddenFor(m => m)
            <p class="form-control-static">@Model</p>
        }
        else
        {
            @Html.TextAreaFor(m => m, new {@class = "form-control html-editor", rows = "10"})
            @Html.ValidationMessageFor(m => m)
        }
    </div>
</div>