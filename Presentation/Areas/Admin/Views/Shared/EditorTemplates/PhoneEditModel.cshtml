@model PhoneEditModel
<div class="form-group">
    @Html.LabelForModel(new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @if (ViewBag.IsReadonly ?? false)
        {
            @Html.HiddenFor(m => m)
            <p class="form-control-static">@Model.PhoneNumber</p>
        }
        else
        {
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @type = "tel" })
            @Html.ValidationMessageFor(m => m)
        }
    </div>
</div>

