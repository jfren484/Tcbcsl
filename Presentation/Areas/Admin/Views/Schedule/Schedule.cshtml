@model ScheduleEditModel
@{
    const string title = "Manage Schedule";
    ViewBag.Title = $"{title} for {Model.Label}";
}
<div class="modal calendar-modal">
    <div class="modal-dialog">
        <div class="modal-content calendar-content">
            @Url.Action("YearCalendar", "Schedule", new { year = Model.Date.Year, activeDate = Model.Date.ToString(Consts.DateFormat) })
        </div>
    </div>
</div>
<div class="dropdown calendar-dropdown pull-right">
    <button class="btn btn-info dropdown-toggle" type="button" data-toggle="modal" data-target=".calendar-modal">
        @Model.Date.ToString(Consts.DateFormatDisplay)
        <span class="caret"></span>
    </button>
</div>
<h2>@title</h2>
<a asp-area="Admin" asp-controller="Game" asp-action="Create" asp-route-date="@Model.Date.ToString(Consts.DateFormat)"><span class="glyphicon glyphicon-plus"></span> Add Game to Schedule</a>
<form asp-controller="Schedule" asp-action="Schedule" method="post" class="form-horizontal form-with-validation">
    @Html.EditorFor(m => m.Buckets)
</form>
