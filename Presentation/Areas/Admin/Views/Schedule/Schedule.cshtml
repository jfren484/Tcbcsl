@model ScheduleEditModel
@{
    const string title = "Manage Schedule";
    ViewBag.Title = $"{title} for {Model.Label}";
}
<div class="modal calendar-modal">
    <div class="modal-dialog">
        <div class="modal-content calendar-content">
            @Html.Action("YearCalendar", "Schedule", new {year = Model.Date.Year, activeDate = Model.Date.ToString(Consts.DateFormat)})
        </div>
    </div>
</div>
<div class="dropdown calendar-dropdown pull-right">
    <button class="btn btn-info dropdown-toggle" type="button" data-toggle="modal" data-target=".calendar-modal">
        @Model.Date.ToString(Consts.DateFormatDisplay)
        <span class="caret"></span>
    </button>
</div>
<h2>@title</h2>
@using (Html.BeginForm("Schedule", "Schedule", FormMethod.Post, new { @class = "form-horizontal form-with-validation" }))
{
    @Html.EditorFor(m => m.Buckets)
}
